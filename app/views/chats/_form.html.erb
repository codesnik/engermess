<% form_for(@chat) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= label_tag :recipient %><br />
    <%= select_tag :recipient, recipient_options_for_select %>
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>

  <% fields_for(:message) do |message_form| %>
    <%= render 'messages/form', :form => message_form %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
